<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="MainActivity"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25" />

        <EditText
            android:id="@+id/ed_main"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="请输入内容！"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/btn_main"
            app:layout_constraintEnd_toEndOf="@+id/tv_main"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="@+id/tv_main"
            app:layout_constraintTop_toBottomOf="@+id/tv_main"
            app:layout_constraintVertical_bias="0.526" />

        <Button
            android:id="@+id/btn_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="312dp"
            android:text="GoTo_One"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ed_main"
            app:layout_constraintStart_toStartOf="@+id/ed_main"
            app:layout_constraintTop_toBottomOf="@+id/tv_main"
            app:layout_constraintVertical_bias="0.662" />

        <Button
            android:id="@+id/btn_main2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="GoTo_Two"
            app:layout_constraintEnd_toEndOf="@+id/btn_main"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="@+id/btn_main"
            app:layout_constraintTop_toBottomOf="@+id/btn_main" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>